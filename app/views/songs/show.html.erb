<%= link_to 'Back to song list', songs_path %>
<h1><%= @song.title %></h1>
<div>
  <b>Notes</b><br/>
  <p>
    <%= @song.notes %>
  </p>
</div>
<div>
  <b>Links</b><br/>
  <% if current_user %>
    <div><%= link_to 'New Link', new_song_link_path(@song) %></div>
  <% end %>
  <br/>
  <ul>
    <% @links.each do |link| %>
      <li class='song_link'>
        <%= link_to link.name, link.url %>
      </li>
    <% end %>
  </ul>
